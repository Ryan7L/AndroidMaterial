<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <View
    android:id="@+id/view_1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignTop="@id/view_2"
    android:layout_toStartOf="@id/view_2"
    android:background="@color/error_reference" />

  <View
    android:id="@+id/view_2"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:layout_marginHorizontal="16dp"
    android:background="@color/green_reference" />

  <View
    android:id="@+id/view_3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignTop="@+id/view_2"
    android:layout_toEndOf="@+id/view_2"
    android:background="@color/yellow_reference" />

  <TextView
    android:id="@+id/logView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/view_2"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="32dp" />
</RelativeLayout>
