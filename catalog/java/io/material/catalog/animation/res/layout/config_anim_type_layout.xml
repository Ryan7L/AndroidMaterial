<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:text="@string/cat_animation_type_title" />

  <com.google.android.material.button.MaterialButtonToggleGroup
    android:id="@+id/type_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:spacing="0dp"
    app:checkedButton="@+id/type_alpha"
    app:selectionRequired="true"
    app:singleSelection="true">

    <com.google.android.material.button.MaterialButton
      android:id="@+id/type_alpha"
      style="?attr/materialButtonOutlinedStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:autoSizeMaxTextSize="16sp"
      android:paddingStart="0dp"
      android:paddingEnd="0dp"
      android:text="@string/cat_animation_type_alpha" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/type_scale"
      style="?attr/materialButtonOutlinedStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:autoSizeMaxTextSize="16sp"
      android:paddingStart="0dp"
      android:paddingEnd="0dp"
      android:text="@string/cat_animation_type_scale" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/type_rotate"
      style="?attr/materialButtonOutlinedStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:autoSizeMaxTextSize="16sp"
      android:paddingStart="0dp"
      android:paddingEnd="0dp"
      android:text="@string/cat_animation_type_rotate" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/type_translate"
      style="?attr/materialButtonOutlinedStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:autoSizeMaxTextSize="16sp"
      android:paddingStart="0dp"
      android:paddingEnd="0dp"
      android:text="@string/cat_animation_type_translate" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/type_set"
      style="?attr/materialButtonOutlinedStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:autoSizeMaxTextSize="16sp"
      android:paddingStart="0dp"
      android:paddingEnd="0dp"
      android:text="@string/cat_animation_type_set" />
  </com.google.android.material.button.MaterialButtonToggleGroup>
</merge>
